{
    "exclude": ["node_modules"],
    "include": ["./src/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "components/*": ["src/components"],
            "mixins/*": ["src/mixins"],
            "views/*": ["src/views"],
        },
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true
    }
}